{%- assign sset = section.settings -%}

<div class="shop_area moo_section_margin{% if sset.section_width == 'full_wide' %} product_section{% endif %}">
  <div class="container{% if sset.section_width == 'full_wide' %}-fluid{% endif %}">
    <div class="shop_inner_area">
      <div class="row{% if sset.sidebar_handle == 'left_sidebar_handle' %} flex-row-reverse{% endif %}">        
        {%- assign products_limit = sset.products_limit_handle -%}{%- paginate collection.products by products_limit -%}        
        <div class="{% if sset.sidebar_handle == 'without_sidebar' %}col-lg-12{% else %}col-lg-9{% endif %}">
          {%- if sset.section_title != '' -%}
          <div class="shop_title">
            <h1>{{ sset.section_title }}</h1>
          </div>{%- endif -%}
          
          {%- if sset.tab_bar_enable or sset.short_by_enable or sset.showing_product_counter_enable -%}{%- include 'collection-sorting' -%}{%- endif -%}
          
          <div class="row shop_wrapper">
            {%- for product in collection.products -%}
            <div class="col-lg-4 col-md-4 col-12">
              {%- include 'product-list-item' -%}
            </div>{%- endfor -%}
          </div>

          {%- include 'pagination' -%}
        </div>{%- endpaginate -%}        

        {%- unless sset.sidebar_handle == 'without_sidebar' -%}<div class="col-lg-3">{%- include 'collection-sidebar' -%}</div>{%- endunless -%}
      </div>
    </div>
  </div>
</div>


{% schema %}
  {
  	"name": "Collection Template",
  	"settings": [
		  {
              "type": "text",
              "id": "section_title",
              "label": "Shop Title",
              "default": "Shop",
