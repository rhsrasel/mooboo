{%- assign sset = section.settings -%}

<section class="banner_section" id="{{ sset.section_id }}">
  <div class="container{% if sset.section_width == 'full_wide' %}-fluid{% endif %}">
    <div class="row ">
      <div class="col-12">
        <div class="banner_conteiner" style="background: url({% if sset.ban_img %}{{ sset.ban_img | img_url: 'master' }}{% else %}https://via.placeholder.com/1680x720{% endif %}) no-repeat scroll center center/cover; height: {{ sset.ban_height }}px;">
          <div class="banner_text">
            {%- if sset.title1 != '' -%}
            <h1 style="color: {{ sset.title1_color }};font-size: {{ sset.title1_font_size }}px">{{ sset.title1 }}</h1>{%- endif -%}

            {%- if sset.btn != '' -%}
            <a href="{{ sset.btn_url }}">{{ sset.btn }}</a>{%- endif -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


{%- style -%}
  #{{ sset.section_id }} .banner_text a {
    font-size: {{ sset.btn_font_size }}px;
    border-color: {{ sset.btn_border_color }};
    color: {{ sset.btn_color }};
    text-transform: unset;
  }
  #{{ sset.section_id }} .banner_text a:hover {
    border-color: {{ sset.btn_hover_border_color }};
    color: {{ sset.btn_hover_color }};
  }

{%- include 'section-settings' -%}
