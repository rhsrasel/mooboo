{%- assign sset = section.settings -%}

<section class="banner_section{% if sset.banner_style == 'style_1' %} banner_section_two{% else %} banner_section_eight{% endif %}" id="{{ sset.section_id }}">
  <div class="container{% if sset.section_width == 'full_wide' %}-fluid{% endif %}">
    <div class="row ">
      {%- for block in section.blocks -%}{%- case block.type -%}
      {%- when 'text_banner' -%}{%- assign bset = block.settings -%}
      <div class="col-lg-{{ bset.ban_col }} col-md-{{ bset.ban_col_tablet }} moo_banner_2">
        <div class="banner_area">
          <div class="banner_thumb">
            <a href="{{ bset.btn_url }}">
              {%- if bset.ban_img -%}
              <img src="{{ bset.ban_img | img_url: 'master' }}" alt="{{ image.alt }}">
              {%- else -%}
              <img src="https://via.placeholder.com/572x578" alt="{{ image.alt }}">
              {%- endif -%}
            </a>
            <div class="banner_content">
              {%- if bset.title1 != '' -%}
              <h1 style="color: {{ bset.title1_color }};font-size: {{ bset.title1_font_size }}px">{{ bset.title1 }}</h1>{%- endif -%}

              {%- if bset.title2 != '' -%}
              <p style="color: {{ bset.title2_color }};font-size: {{ bset.title2_font_size }}px">{{ bset.title2 }}</p>{%- endif -%}

              {%- if bset.title3 != '' -%}
              <p class="desc" style="color: {{ bset.title3_color }};font-size: {{ bset.title3_font_size }}px">{{ bset.title3 }}</p>{%- endif -%}

              {%- if bset.btn != '' -%}
              <a href="{{ bset.btn_url }}">{{ bset.btn }}</a>{%- endif -%}
            </div>
          </div>
        </div>
      </div>{%- endcase -%}{%- endfor -%}
    </div>
  </div>
</section>


{%- style -%}
  {%- for block in section.blocks -%}{%- case block.type -%}
  {%- when 'text_banner' -%}{%- assign bset = block.settings -%}
  #{{ sset.section_id }} .banner_content a {
    font-size: {{ bset.btn_font_size }}px;
    border-color: {{ bset.btn_border_color }};
    color: {{ bset.btn_color }};
    text-transform: unset;
  }
  #{{ sset.section_id }} .banner_content a:hover {
  	border-color: {{ bset.btn_hover_border_color }};
  	color: {{ bset.btn_hover_color }};
  }
  {%- endcase -%}{%- endfor -%}

