{% if section.settings.contact_form_section_enable == true %}
<div class="contact_area pt-60" id="section-{{ section.id }}">
  <div class="container">   
    <div class="row">      
      {% if section.settings.contact_Info_description == true %}
      <div class="{% if section.settings.contact_form_enable == true %} col-lg-6 {% else %} col-12 {% endif %} col-md-12">
        <div class="contact_message content">
          {% if section.settings.contact_info_title != blank %}
          <h3>{{ section.settings.contact_info_title }}</h3>{% endif %}
          
          {% if section.settings.contact_info_description != blank %}
          <p>{{ section.settings.contact_info_description }}</p>{% endif %}
          
          <ul>            
            {% for block in section.blocks  %}
            <li><i class="fa fa-{{ block.settings.conatct_icon }}"></i> {{ block.settings.contact_description }}</li>
            {% endfor %}            
          </ul>             
        </div> 
      </div>
      {% endif %}
      
      {% if section.settings.contact_form_enable == true %}      
      <div class="{% if section.settings.contact_Info_description == true %} col-lg-6 {% else %} col-12 {% endif %} col-md-12">
        <div class="contact_message form">          
          {% if section.settings.contact_form_title != blank %}
          <h3>{{ section.settings.contact_form_title }}</h3>   
          {% endif %}
          
          {% include 'contact-form' %}
        </div> 
      </div>{% endif %}      
    </div>
  </div>    
</div>
{% endif %}

{% if section.settings.google_map_enable == true %}{% include 'contact_map' %}{% endif %}


