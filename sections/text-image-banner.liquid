{%- assign sset = section.settings -%}

<section class="banner_section{% if sset.hover_style == 'style_1' %} banner_section_three{% else %} banner_section_two banner_seven{% endif %}" id="{{ sset.section_id }}">
  <div class="container{% if sset.section_width == 'full_wide' %}-fluid{% endif %}">
    <div class="row ">
      {%- for block in section.blocks -%}{%- case block.type -%}
      {%- when 'img_banner' -%}{%- assign bset = block.settings -%}
      <div class="col-lg-{{ bset.ban_col }} col-md-{{ bset.ban_col }}">
        <div class="banner_area">
          <div class="banner_thumb">
            <a href="{{ bset.btn_url }}">
              {%- if bset.ban_img -%}
              <img src="{{ bset.ban_img | img_url: 'master' }}" alt="{{ image.alt }}">
              {%- else -%}
              <img src="https://via.placeholder.com/930x440" alt="{{ image.alt }}">
              {%- endif -%}
            </a>
            <div class="banner_content">
              {%- if bset.title1 != '' -%}
              <h1 style="color: {{ bset.title1_color }};font-size: {{ bset.title1_font_size }}px">{{ bset.title1 }}</h1>{%- endif -%}

              {%- if bset.btn != '' -%}
              <a href="{{ bset.btn_url }}">{{ bset.btn }}</a>{%- endif -%}
            </div>
          </div>
        </div>
      </div>{%- endcase -%}{%- endfor -%}
    </div>
  </div>
</section>


