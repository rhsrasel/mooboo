{%- assign sset = section.settings -%}

<div class="rich-text" id="{{ sset.section_id }}">
  {% if sset.section_title != '' %}
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="section-title">
          <h2>{{ sset.section_title }}</h2>
        </div>
      </div>
    </div>
  </div>
  <br>
  {% endif %}
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="rich-text">
          {{ sset.rich_text_handle }}
        </div>
      </div>
    </div>	
  </div>
</div>


{%- style -%}
{%- include 'section-settings' -%}
{%- endstyle -%}



